{
  "name": "tui-pw-framework",
  "version": "1.0.0",
  "description": "Playwright E2E framework for TUI UI flow",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test --project='e2e | api'",
    "clear": "rimraf allure-results playwright-report storage test-results",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "tui",
    "automation"
  ],
  "author": "",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-playwright": "^1.8.3",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3"
  }
}
